<div class= "container mx-auto">
<%= form_with model: @bank_account do |form| %>
<div data-controller="general" class="px-5" >
    <% if form.object.errors.any? %>
            <div class="rounded-md bg-red-50 p-4">
               
                <div class="mt-2 text-sm text-red-700">
                 <ul role="list" class="list-disc space-y-1 pl-5">
                <% form.object.errors.full_messages.each do |message| %>
                   
                     
                    <div> <%= message %> </div>

            
                <% end %>
                </ul>
                </div>
                </div>
            <% end %>
 <div>
     <%= form.label :bank_code,'Bank Name', class:"block text-sm font-medium leading-6 text-gray-900"%>
     <%= puts current_user.bank_account%>
    

      <%= form.select :bank_code,@banklist,{prompt:"Enter your bank name" },class:" w-full sm:w-1/3 rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:leading-6",data:{controller:'slim' , action:"change->general#setBankName",general_target:"bankCode"}%>
    </div>

    <div>
    <%= form.label :account_number,'Account Number', class:"block text-sm font-medium leading-6 text-gray-900"%>
     <%= form.text_field :account_number, placeholder:'Enter your account number', class:"block w-full sm:w-1/3 rounded-md border-0 py-1.5  shadow-sm ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-inset focus:ring-indigo-600  "%>
    </div>

     <%= form.hidden_field :bank_name, data:{general_target:"bankName"}%>
   

      <%= form.submit "Save bank account", class:"rounded-md bg-teal-700 px-3 py-2 text-sm font-semibold text-white shadow-sm " %>
</div>

<%end%>



<!-- component -->

    
        </div>
    </div>

</div>